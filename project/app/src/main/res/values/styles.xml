<resources>

    <!-- LIGHT THEME -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="colorPrimaryDark">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="md_font_title">@font/raleway_black</item>
        <item name="md_font_body">@font/raleway</item>
        <item name="md_font_button">@font/raleway_semibold</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="ActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sort</item>
    </style>

    <!-- This will set the fade in animation on all the activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Indicator text style -->
    <style name="IndicatorTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <!-- Indicator thumb text style -->
    <style name="IndicatorThumbTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>

    <!-- Style for search bar -->
    <style name="SearchBarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>
</resources>
